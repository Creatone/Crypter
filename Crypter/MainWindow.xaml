<Window x:Class="Crypter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crypter"
        mc:Ignorable="d"
        Title="Crypter" Height="430" Width="525"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/Resources/logo.png">
    <Grid>
        <TabControl>
            <TabItem Header="Szyfrowanie">
                <Grid Background="DarkGray">
                    <Grid Background="lightGray">
                        <Label Content="Plik wejściowy:" Margin="0 5 0 0"></Label>
                        <TextBox x:Name="encryptFilePathIn" Width="290" Height="20" VerticalAlignment="Top" Margin="0 10 35 0"></TextBox>
                        <Button Content="Wybierz" Height="20" Width="100" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 10 10 0" Click="File_In_Button_Click"></Button>
                        <Label Content="Plik wynikowy:" Margin="0 45 0 0"></Label>
                        <TextBox x:Name="encryptFilePathOut" Width="290" Height="20" VerticalAlignment="Top" Margin="0 50 35 0"></TextBox>
                        <Button Content="Wybierz" Height="20" Width="100" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 50 10 0" Click="File_Out_Button_Click"></Button>
                        <Label VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Width="250" Margin="5 80 0 0" FontSize="16" Background="DarkGray">RIJNDAEL - USTAWIENIA</Label>
                        <Label VerticalAlignment="Top" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Width="250" Margin="0 80 5 0" FontSize="16" Background="DarkGray">ODBIORCY</Label>
                        <Label VerticalAlignment="Top" Content="Długość klucza:" Margin="5 115 0 0 "></Label>
                        <ComboBox x:Name="keyLength" VerticalAlignment="Top" HorizontalAlignment="Left" Width="60" Height="20" Margin="120 120 0 0" >
                            <ComboBoxItem>256</ComboBoxItem>
                            <ComboBoxItem>192</ComboBoxItem>
                            <ComboBoxItem>128</ComboBoxItem>
                        </ComboBox>
                        <Label Content="bitów." Margin="180 115 0 0 " HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
                        <Label Content="Długość bloku:" Margin="5 140 0 0 " VerticalAlignment="Top"></Label>
                        <ComboBox x:Name="blockLength"  Width="60" Height="20" Margin="120 145 0 0 "  HorizontalAlignment="Left" VerticalAlignment="Top">
                            <ComboBoxItem>256</ComboBoxItem>
                            <ComboBoxItem>192</ComboBoxItem>
                            <ComboBoxItem>128</ComboBoxItem>
                        </ComboBox>
                        <Label Content="bitów." Margin="180 140 0 0 " HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
                        <Label Content="Tryb:" Margin="5 165 0 0" VerticalAlignment="Top"></Label>
                        <ComboBox x:Name="mode" Width="60" Height="20" Margin="120 170 50 0 "  HorizontalAlignment="Left" VerticalAlignment="Top">
                            <ComboBoxItem>ECB</ComboBoxItem>
                            <ComboBoxItem>CBC</ComboBoxItem>
                            <ComboBoxItem>CFB</ComboBoxItem>
                            <ComboBoxItem>OFB</ComboBoxItem>
                        </ComboBox>
                        <Label VerticalAlignment="Top" Content="Długość podbloku:" Margin="5 190 0 0 "></Label>
                        <ComboBox x:Name="dlugoscPodBloku" VerticalAlignment="Top" HorizontalAlignment="Left" Width="60" Height="20" Margin="120 195 0 0" >
                        </ComboBox>
                        <Label Content="bitów." Margin="180 190 0 0 " HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
                        <ListBox x:Name="listOdbiorcy" SelectionMode="Multiple" Margin="0 120 5 0"  VerticalAlignment="Top" HorizontalAlignment="Right" Height="110" Width="250">
                        </ListBox>
                        <Label VerticalAlignment="Top" HorizontalContentAlignment="Center" Margin="0 240 0 0" FontSize="16" Background="DarkGray">ZARZĄDZANIE KLUCZAMI</Label>
                        <Label Content="Folder kluczy publicznych:" VerticalAlignment="Top" Margin="5 270 0 0"></Label>
                        <TextBox x:Name="publicKeysPath" Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150 275 0 0" ></TextBox>
                        <Button Content="Wybierz" Height="20" Width="100" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 275 40 0" Click="File_Public_Keys_Button_Click"></Button>
                        <Button Content="Szyfruj" Height="20" Width="100" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 310 0 0" Click="Encrypt_Button_Click"></Button>
                        <ProgressBar Value="0" VerticalAlignment="Top" Margin="20 340 20 0" Height="10"></ProgressBar>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Deszyfrowanie">
                <Grid Background="DarkGray">
                    <Grid Background="lightGray">
                        <Label Content="Plik wejściowy:" Margin="0 5 0 0"></Label>
                        <TextBox x:Name="decryptFilePathIn" Width="290" Height="20" VerticalAlignment="Top" Margin="0 10 35 0"></TextBox>
                        <Button Content="Wybierz" Height="20" Width="100" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 10 10 0" Click="File_In_Button_Click"></Button>
                        <Label Content="Plik wynikowy:" Margin="0 45 0 0"></Label>
                        <TextBox x:Name="decryptFilePathOut" Width="290" Height="20" VerticalAlignment="Top" Margin="0 50 35 0"></TextBox>
                        <Button Content="Wybierz" Height="20" Width="100" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 50 10 0" Click="File_Out_Button_Click"></Button>
                        <Label VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Width="250" Margin="5 80 0 0" FontSize="16" Background="DarkGray">ODBIORCY</Label>
                        <Label VerticalAlignment="Top" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Width="250" Margin="0 80 5 0" FontSize="16" Background="DarkGray">HASŁO KLUCZA PRYWATNEGO</Label>
                        <ListBox SelectionMode="Multiple" Margin="5 120 5 0"  VerticalAlignment="Top" HorizontalAlignment="Left" Height="110" Width="250">
                        </ListBox>
                        <TextBox Width="130" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 120 60 0"></TextBox>
                        <Label VerticalAlignment="Top" HorizontalContentAlignment="Center" Margin="0 240 0 0" FontSize="16" Background="DarkGray">ZARZĄDZANIE KLUCZAMI</Label>
                        <Label Content="Folder kluczy prywatnych:" VerticalAlignment="Top" Margin="5 275 0 0"></Label>
                        <TextBox Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150 280 0 0"></TextBox>
                        <Button Content="Wybierz" Height="20" Width="100" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 280 40 0"></Button>
                        <Button Content="Odszyfruj" Height="20" Width="100" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 320 0 0" Click="Decrypt_Button_Click"></Button>
                        <ProgressBar Value="10" VerticalAlignment="Top" Margin="20 350 20 0" Height="10"></ProgressBar>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="O programie">
                <Grid Background="DarkGray">
                    <Image Source="pack://application:,,,/Resources/logo.png" Height="80" VerticalAlignment="Top" Margin="0 100 0 0"></Image>
                    <TextBlock FontSize="18" Margin="0 70 0 0" VerticalAlignment="Center" HorizontalAlignment="Center">Crypter - szyfrator oraz deszyfrator plików<LineBreak/>Algorytm: AES (Rijndael)<LineBreak/>Autor: Paweł Szulik 154991</TextBlock>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
